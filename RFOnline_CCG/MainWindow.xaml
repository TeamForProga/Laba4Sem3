<Window x:Class="RFOnline_CCG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RFOnline_CCG"
        xmlns:converters="clr-namespace:RFOnline_CCG.Converters"
        xmlns:viewModels="clr-namespace:RFOnline_CCG.ViewModels"
        mc:Ignorable="d"
        Title="RF Online: Card Warfare" 
        Height="1080" 
        Width="1920"
        WindowStyle="None" 
        WindowState="Maximized" 
        Background="#050505"
        d:DataContext="{d:DesignInstance Type=viewModels:GameViewModel, IsDesignTimeCreatable=False}">

    <Window.Resources>
        <!-- Конвертеры -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:FactionToColorConverter x:Key="FactionToColorConverter"/>
        <converters:HealthToColorConverter x:Key="HealthToColorConverter"/>
        <converters:HealthToTextConverter x:Key="HealthToTextConverter"/>
        <converters:CardToImageConverter x:Key="CardToImageConverter"/>
        <converters:FactionToImageConverter x:Key="FactionToImageConverter"/>
        <converters:BackgroundToImageConverter x:Key="BackgroundToImageConverter"/>
        <converters:AttackHealthConverter x:Key="AttackHealthConverter"/>
        <converters:IsCreatureConverter x:Key="IsCreatureConverter"/>
        <converters:IsSpellConverter x:Key="IsSpellConverter"/>
        <converters:CardTypeToTextConverter x:Key="CardTypeToTextConverter"/>
        <converters:SpellSubtypeToTextConverter x:Key="SpellSubtypeToTextConverter"/>
        <converters:CardCostConverter x:Key="CardCostConverter"/>
        <converters:DateTimeConverter x:Key="DateTimeConverter"/>
        <converters:TextTruncateConverter x:Key="TextTruncateConverter"/>
        <converters:EqualsToVisibilityConverter x:Key="EqualsToVisibilityConverter"/>
        <converters:GreaterThanConverter x:Key="GreaterThanConverter"/>
        <converters:LessThanConverter x:Key="LessThanConverter"/>

        <!-- Стили -->
        <Style x:Key="FactionButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="#10151B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="0,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Path Data="M 20,0 L 400,0 L 380,80 L 0,80 Z"
                                  Stretch="Fill"
                                  Fill="{TemplateBinding Background}" 
                                  Stroke="{StaticResource NeonBrush}" 
                                  StrokeThickness="2">
                                <Path.Effect>
                                    <DropShadowEffect Color="{StaticResource NeonColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                                </Path.Effect>
                            </Path>

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>

                            <Rectangle Width="10" Height="2" Fill="{StaticResource NeonBrush}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,5"/>
                            <Rectangle Width="10" Height="2" Fill="{StaticResource NeonBrush}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="30,5"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A2A3A"/>
                                <Setter Property="Foreground" Value="{StaticResource NeonBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RFGameButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#10151B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="0,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Path Data="M 20,0 L 400,0 L 380,80 L 0,80 Z" 
                                  Stretch="Fill"
                                  Fill="{TemplateBinding Background}" 
                                  Stroke="{StaticResource NeonBrush}" 
                                  StrokeThickness="2">
                                <Path.Effect>
                                    <DropShadowEffect Color="{StaticResource NeonColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                                </Path.Effect>
                            </Path>

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>

                            <Rectangle Width="10" Height="2" Fill="{StaticResource NeonBrush}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,5"/>
                            <Rectangle Width="10" Height="2" Fill="{StaticResource NeonBrush}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="30,5"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A2A3A"/>
                                <Setter Property="Foreground" Value="{StaticResource NeonBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="{x:Type Border}">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="170"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#151B21"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeonCyan}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#00F2FF" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FieldSlot" TargetType="{x:Type Border}">
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="190"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#0AFFFFFF"/>
            <Setter Property="BorderBrush" Value="#22FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Обновленный CardDataTemplate с изображениями -->
        <DataTemplate x:Key="CardDataTemplate">
            <Border x:Name="CardBorder"
            Style="{StaticResource CardStyle}" 
            MouseDown="Card_MouseDown"
            MouseMove="Card_MouseMove"
            ToolTip="{Binding EffectText}">

                <!-- Фон карты с изображением -->
                <Border.Background>
                    <ImageBrush ImageSource="{Binding Path=., Converter={StaticResource CardToImageConverter}}"
                        Stretch="UniformToFill"
                        Opacity="0.8"/>
                </Border.Background>

                <!-- Полупрозрачный оверлей для улучшения читаемости текста -->
                <Border Background="#80000000" CornerRadius="3">
                    <StackPanel>
                        <!-- Заголовок карты с иконкой фракции -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Name}" 
                               Foreground="White" 
                               FontSize="10" 
                               FontWeight="Bold" 
                               TextWrapping="Wrap" 
                               Margin="5,5,0,0"/>

                            <Image Source="{Binding FactionImage}" 
                           Grid.Column="1"
                           Width="16" 
                           Height="16"
                           Margin="0,5,5,0"/>
                        </Grid>

                        <!-- Стоимость в правом верхнем углу -->
                        <Border Background="#40000000" 
                        HorizontalAlignment="Right" 
                        Margin="5" 
                        CornerRadius="10"
                        Width="25" 
                        Height="25">
                            <TextBlock Text="{Binding Cost}" 
                               Foreground="{StaticResource EnergyOrange}" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                        </Border>

                        <!-- Для существ -->
                        <StackPanel Visibility="{Binding IsCreature, Converter={StaticResource BoolToVisibilityConverter}}"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">
                            <TextBlock Text="{Binding Attack}" 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>

                            <Path Data="M 0,0 L 40,0" 
                          Stroke="White" 
                          StrokeThickness="1" 
                          HorizontalAlignment="Center"
                          Margin="0,2"/>

                            <TextBlock Text="{Binding Health}" 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Для заклинаний -->
                        <StackPanel Visibility="{Binding IsSpell, Converter={StaticResource BoolToVisibilityConverter}}"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">
                            <TextBlock Text="{Binding SpellType}" 
                               Foreground="Gold" 
                               FontSize="9" 
                               HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Power, StringFormat='Сила: {0}'}" 
                               Foreground="White" 
                               FontSize="10"
                               HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Для артефактов -->
                        <StackPanel Visibility="{Binding IsArtifact, Converter={StaticResource BoolToVisibilityConverter}}"
                            HorizontalAlignment="Center"
                            Margin="0,30,0,0">
                            <TextBlock Text="АРТЕФАКТ" 
                               Foreground="Gold" 
                               FontSize="10" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Border>

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter TargetName="CardBorder" Property="BorderBrush" Value="Gold"/>
                    <Setter TargetName="CardBorder" Property="BorderThickness" Value="2"/>
                    <Setter TargetName="CardBorder" Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="Gold" Opacity="0.7"/>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
        <!-- DataTemplate для существ на поле -->
        <DataTemplate x:Key="CreatureDataTemplate">
            <Border x:Name="CreatureBorder"
            Style="{StaticResource FieldSlot}" 
            MouseDown="Creature_MouseDown"
            ToolTip="{Binding StateText}">

                <!-- Фон существа -->
                <Border.Background>
                    <ImageBrush ImageSource="{Binding Path=., Converter={StaticResource CardToImageConverter}}"
                        Stretch="UniformToFill"/>
                </Border.Background>

                <!-- Информация о существе -->
                <Grid>
                    <!-- Полупрозрачная панель для информации -->
                    <Border Background="#AA000000" 
                    VerticalAlignment="Bottom"
                    Height="50">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Атака -->
                            <StackPanel Grid.Column="0" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <TextBlock Text="⚔" 
                                   Foreground="Red" 
                                   FontSize="14"
                                   HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Attack}" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Здоровье -->
                            <StackPanel Grid.Column="1" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <TextBlock Text="❤" 
                                   Foreground="Red" 
                                   FontSize="14"
                                   HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Health}" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Состояние существа (верхний правый угол) -->
                    <Border Background="#AA000000" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"
                    CornerRadius="10"
                    Margin="5">
                        <TextBlock Text="{Binding StateText}" 
                           FontSize="8" 
                           Foreground="{Binding State, Converter={StaticResource CreatureStateToColorConverter}}"
                           Margin="5,2"/>
                    </Border>

                    <!-- Имя существа -->
                    <TextBlock Text="{Binding Name}" 
                       Foreground="White" 
                       FontSize="9" 
                       TextWrapping="Wrap" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="5"
                       TextAlignment="Center"/>
                </Grid>
            </Border>

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter TargetName="CreatureBorder" Property="BorderBrush" Value="Gold"/>
                    <Setter TargetName="CreatureBorder" Property="BorderThickness" Value="3"/>
                </DataTrigger>

                <!-- Триггер для неживых существ -->
                <DataTrigger Binding="{Binding IsAlive}" Value="False">
                    <Setter TargetName="CreatureBorder" Property="Opacity" Value="0.5"/>
                    <Setter TargetName="CreatureBorder" Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="Gray" Opacity="0.7"/>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">
            <!-- Главное меню -->
            <Grid x:Name="MainMenuUI" Visibility="{Binding MainMenuVisibility}">
                <Rectangle>
                    <Rectangle.Fill>
                        <RadialGradientBrush Center="0.5,0.5" RadiusX="0.7" RadiusY="0.7">
                            <GradientStop Color="#101A24" Offset="0"/>
                            <GradientStop Color="#020405" Offset="1"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Path Data="M0,0 L1920,0 M0,100 L1920,100 M0,200 L1920,200" 
                      Stroke="{StaticResource NeonBrush}" 
                      StrokeThickness="0.2" 
                      Opacity="0.1" 
                      Stretch="Fill"/>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid Margin="0,0,0,100">
                        <TextBlock Text="RF: GENESIS" 
                                   FontSize="86" 
                                   Foreground="White" 
                                   FontWeight="Black" 
                                   HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="{StaticResource NeonColor}" BlurRadius="20" ShadowDepth="0"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="CARD WARFARE" 
                                   FontSize="20" 
                                   Foreground="{StaticResource NeonBrush}" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Left" 
                                   Margin="175,106,0,-21"/>
                    </Grid>

                    <Button Content="НАЧАТЬ ИГРУ" 
                            Style="{StaticResource RFGameButton}" 
                            Command="{Binding StartGameCommand}"/>

                    <Button Content="ЗАГРУЗИТЬ ИГРУ" 
                            Style="{StaticResource RFGameButton}" 
                            Command="{Binding LoadGameMenuCommand}"/>

                    <Button Content="ВЫХОД" 
                            Style="{StaticResource RFGameButton}" 
                            Command="{Binding ExitCommand}"/>
                </StackPanel>

                <Canvas>
                    <Path Data="M 0,0 L 200,0 L 180,20 L 20,20 L 0,200 Z" 
                          Fill="#10151B" 
                          Stroke="{StaticResource NeonBrush}" 
                          StrokeThickness="1" 
                          Opacity="0.6"/>

                    <Path Data="M 1920,1080 L 1720,1080 L 1740,1060 L 1900,1060 L 1920,880 Z" 
                          Fill="#10151B" 
                          Stroke="{StaticResource NeonBrush}" 
                          StrokeThickness="1" 
                          Opacity="0.6" 
                          Canvas.Left="0" 
                          Canvas.Top="0"/>
                </Canvas>

                <StackPanel Orientation="Horizontal" 
                            VerticalAlignment="Bottom" 
                            HorizontalAlignment="Right" 
                            Margin="30">
                    <TextBlock Text="v 0.1.4-BETA" 
                               Foreground="#444" 
                               Margin="10,0"/>
                    <TextBlock Text="TeamForProga" 
                               Foreground="LimeGreen" 
                               Opacity="0.7"/>
                </StackPanel>
            </Grid>

            <!-- Игровое поле -->
            <Grid x:Name="GameBoardUI" Visibility="{Binding GameBoardVisibility}">
                <!-- Фон игрового поля -->
                <Rectangle>
                    <Rectangle.Fill>
                        <RadialGradientBrush Center="0.5,0.5" RadiusX="1.5" RadiusY="1">
                            <GradientStop Color="#0A1520" Offset="0"/>
                            <GradientStop Color="#030810" Offset="1"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <!-- Декоративные линии -->
                <Path Data="M0,540 L1920,540" 
                      Stroke="#1A2A40" 
                      StrokeThickness="1" 
                      Stretch="Fill"/>

                <!-- Информация о текущем игроке -->
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30">
                    <TextBlock Text="{Binding CurrentPlayerText}" 
                               Foreground="{StaticResource NeonBrush}" 
                               FontSize="18" 
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding TurnText}" 
                               Foreground="White" 
                               FontSize="14" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Кнопка паузы -->
                <Button Content="≡" 
                        FontSize="24" 
                        FontWeight="Bold"
                        Width="50" 
                        Height="50" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Top" 
                        Margin="30"
                        Background="Transparent" 
                        Foreground="{StaticResource NeonBrush}"
                        BorderBrush="{StaticResource NeonBrush}"
                        BorderThickness="1"
                        Command="{Binding ShowPauseMenuCommand}">
                    <Button.Effect>
                        <DropShadowEffect Color="{StaticResource NeonColor}" BlurRadius="10"/>
                    </Button.Effect>
                </Button>

                <!-- Рука игрока -->
                <ItemsControl x:Name="PlayerHand" 
                              ItemsSource="{Binding PlayerHand}" 
                              ItemTemplate="{StaticResource CardDataTemplate}"
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Bottom" 
                              Margin="0,0,0,50">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <!-- Поле игрока -->
                <ItemsControl x:Name="PlayerBoardSlots" 
                              ItemsSource="{Binding PlayerField}" 
                              ItemTemplate="{StaticResource CreatureDataTemplate}"
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center" 
                              Margin="0,100,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <!-- Поле противника -->
                <ItemsControl x:Name="EnemyBoardSlots" 
                              ItemsSource="{Binding EnemyField}" 
                              ItemTemplate="{StaticResource CreatureDataTemplate}"
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Top" 
                              Margin="0,100,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <!-- Зона для игры карт -->
                <Border x:Name="DropZone" 
                        Height="212" 
                        Width="820"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        BorderBrush="{StaticResource NeonCyan}" 
                        BorderThickness="1" 
                        Opacity="0.2" 
                        Background="Transparent"
                        AllowDrop="True"
                        DragEnter="DropZone_DragEnter"
                        DragLeave="DropZone_DragLeave"
                        Drop="DropZone_Drop">
                    <TextBlock Text="ПОЛЕ БОЯ" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center" 
                               Foreground="{StaticResource NeonCyan}"/>
                </Border>

                <!-- Статистика игрока -->
                <Border Background="#0A1520" 
                        BorderBrush="{StaticResource NeonCyan}" 
                        BorderThickness="1"
                        Width="250"
                        Height="120"
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top"
                        Margin="30,150,0,0">
                    <StackPanel Margin="10">
                        <TextBlock Text="{Binding PlayerHealthText}" 
                                   Foreground="White" 
                                   FontSize="20" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding EnergyText}" 
                                   Foreground="{StaticResource EnergyOrange}" 
                                   FontSize="18" 
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding DeckCountText, StringFormat='Колода: {0}'}" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Статистика противника -->
                <Border Background="#0A1520" 
                        BorderBrush="{StaticResource NeonCyan}" 
                        BorderThickness="1"
                        Width="250"
                        Height="120"
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Top"
                        Margin="0,150,30,0">
                    <StackPanel Margin="10">
                        <TextBlock Text="{Binding EnemyHealthText}" 
                                   Foreground="Red" 
                                   FontSize="20" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="Противник" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Панель действий -->
                <StackPanel HorizontalAlignment="Right" 
                            VerticalAlignment="Bottom" 
                            Margin="30,0,30,150"
                            Width="200"/>

                <!-- Лог игры -->
                <Border Background="#0A1520" 
                        BorderBrush="{StaticResource NeonCyan}" 
                        BorderThickness="1"
                        Width="350"
                        Height="200"
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Bottom"
                        Margin="30,0,0,150">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding GameLogText}" 
                                   Foreground="White" 
                                   FontSize="12" 
                                   Margin="10"
                                   TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Border>

                <!-- Время игры -->
                <Border Background="#0A1520" 
                        BorderBrush="{StaticResource NeonCyan}" 
                        BorderThickness="1"
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom"
                        Margin="0,0,30,30"
                        Padding="10">
                    <TextBlock Text="{Binding GameTimeText}" 
                               Foreground="{StaticResource NeonBrush}" 
                               FontSize="14" 
                               FontWeight="Bold"/>
                </Border>
                <Button Content="Сыграть карту" 
                            Style="{StaticResource RFGameButton}" 
                            Height="NaN" 
                            FontSize="16"
                            Command="{Binding PlayCardCommand}"
                            IsEnabled="{Binding SelectedCard, Converter={StaticResource BoolToVisibilityConverter}}" Margin="1490,705,30,325"/>
                <Button Content="Атаковать" 
                            Style="{StaticResource RFGameButton}" 
                            Height="NaN" 
                            FontSize="16"
                            Command="{Binding AttackCommand}"
                            IsEnabled="{Binding SelectedCreature, Converter={StaticResource BoolToVisibilityConverter}}" Margin="1490,785,30,245"/>
                <Button Content="Завершить ход" 
                            Style="{StaticResource RFGameButton}" 
                            Height="NaN" 
                            FontSize="18"
                            Command="{Binding EndTurnCommand}" Margin="1490,865,30,155"/>
            </Grid>

             <!--Экран новой игры--> 
            
            <Grid x:Name="NewGameScreen" 
                  Background="#CC050505" 
                  Visibility="{Binding NewGameScreenVisibility}">
                <Border BorderBrush="{StaticResource NeonBrush}" 
                        BorderThickness="1" 
                        Background="#0A0E14" 
                        Width="900" 
                        Height="600" 
                        CornerRadius="5">
                    <Grid Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="ПОДГОТОВКА К СРАЖЕНИЮ" 
                                   Foreground="{StaticResource NeonBrush}" 
                                   FontSize="36" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,30"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="ИГРОК 1" 
                                           Foreground="White" 
                                           Opacity="0.5" 
                                           Margin="0,0,0,10"/>

                                <TextBox Text="{Binding Player1Name, UpdateSourceTrigger=PropertyChanged}" 
                                         Height="40" 
                                         Background="#151A20" 
                                         Foreground="White" 
                                         BorderBrush="{StaticResource NeonBrush}" 
                                         Padding="10,5" 
                                         FontSize="18" 
                                         Margin="0,0,0,20"/>

                                <TextBlock Text="ВЫБЕРИТЕ ФРАКЦИЮ" 
                                           Foreground="White" 
                                           FontSize="12" 
                                           Margin="0,0,0,10"/>

                                <UniformGrid Columns="1">
                                    <RadioButton Content="ACCRETIA EMPIRE" 
                                                 Command="{Binding SelectFactionCommand}" 
                                                 CommandParameter="Player1:Accretia"
                                                 Tag="#FF3333" 
                                                 Foreground="#FF3333" 
                                                 Style="{StaticResource FactionButtonStyle}" 
                                                 IsChecked="{Binding Player1Faction, Converter={StaticResource FactionToBoolConverter}, ConverterParameter=Accretia}" Height="51" Width="340"/>

                                    <RadioButton Content="BELLATO UNION" 
                                                 Command="{Binding SelectFactionCommand}" 
                                                 CommandParameter="Player1:Bellato"
                                                 Tag="#3399FF" 
                                                 Foreground="#3399FF" 
                                                 Style="{StaticResource FactionButtonStyle}" 
                                                 IsChecked="{Binding Player1Faction, Converter={StaticResource FactionToBoolConverter}, ConverterParameter=Bellato}" Height="52" Width="340"/>

                                    <RadioButton Content="CORA ALLIANCE" 
                                                 Command="{Binding SelectFactionCommand}" 
                                                 CommandParameter="Player1:Cora"
                                                 Tag="#CC33FF" 
                                                 Foreground="#CC33FF" 
                                                 Style="{StaticResource FactionButtonStyle}" 
                                                 IsChecked="{Binding Player1Faction, Converter={StaticResource FactionToBoolConverter}, ConverterParameter=Cora}" Height="50" Width="340"/>
                                </UniformGrid>
                            </StackPanel>

                            <TextBlock Grid.Column="1" 
                                       Text="VS" 
                                       Foreground="White" 
                                       FontSize="48" 
                                       FontWeight="Black" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center" 
                                       Opacity="0.2"/>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="ИГРОК 2" 
                                           Foreground="White" 
                                           Opacity="0.5" 
                                           Margin="0,0,0,10"/>

                                <TextBox Text="{Binding Player2Name, UpdateSourceTrigger=PropertyChanged}" 
                                         Height="40" 
                                         Background="#151A20" 
                                         Foreground="White" 
                                         BorderBrush="{StaticResource NeonBrush}" 
                                         Padding="10,5" 
                                         FontSize="18" 
                                         Margin="0,0,0,20"/>

                                <TextBlock Text="ВЫБЕРИТЕ ФРАКЦИЮ" 
                                           Foreground="White" 
                                           FontSize="12" 
                                           Margin="0,0,0,10"/>

                                <UniformGrid Columns="1">
                                    <RadioButton Content="ACCRETIA EMPIRE" 
                                                 Command="{Binding SelectFactionCommand}" 
                                                 CommandParameter="Player2:Accretia"
                                                 Tag="#FF3333" 
                                                 Foreground="#FF3333" 
                                                 Style="{StaticResource FactionButtonStyle}" 
                                                 IsChecked="{Binding Player2Faction, Converter={StaticResource FactionToBoolConverter}, ConverterParameter=Accretia}" Height="49" Width="332"/>

                                    <RadioButton Content="BELLATO UNION" 
                                                 Command="{Binding SelectFactionCommand}" 
                                                 CommandParameter="Player2:Bellato"
                                                 Tag="#3399FF" 
                                                 Foreground="#3399FF" 
                                                 Style="{StaticResource FactionButtonStyle}" 
                                                 IsChecked="{Binding Player2Faction, Converter={StaticResource FactionToBoolConverter}, ConverterParameter=Bellato}" Height="49" Width="332"/>

                                    <RadioButton Content="CORA ALLIANCE" 
                                                 Command="{Binding SelectFactionCommand}" 
                                                 CommandParameter="Player2:Cora"
                                                 Tag="#CC33FF" 
                                                 Foreground="#CC33FF" 
                                                 Style="{StaticResource FactionButtonStyle}" 
                                                 IsChecked="{Binding Player2Faction, Converter={StaticResource FactionToBoolConverter}, ConverterParameter=Cora}" Height="49" Width="332"/>
                                </UniformGrid>
                            </StackPanel>
                        </Grid>

                        <StackPanel Grid.Row="2" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right" 
                                    Margin="0,20,0,0">
                            <Button x:Name="BtnNewGameCancel" 
                                    Content="ОТМЕНА" 
                                    Style="{StaticResource RFGameButton}" 
                                    Width="200" 
                                    Height="50" 
                                    Margin="10,0" 
                                    Command="{Binding CancelNewGameCommand}"/>

                            <Button x:Name="BtnStartBoardGame" 
                                    Content="В БОЙ" 
                                    Style="{StaticResource RFGameButton}" 
                                    Width="250" 
                                    Height="60" 
                                    FontWeight="Black" 
                                    Command="{Binding StartBoardGameCommand}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

             <!--Экран загрузки игры--> 
            
            <Grid x:Name="LoadGameScreen" 
                  Background="#CC050505" 
                  Visibility="{Binding LoadGameScreenVisibility}">
                <Border BorderBrush="{StaticResource NeonBrush}" 
                        BorderThickness="1" 
                        Background="#0A0E14" 
                        Width="700" 
                        Height="600" 
                        CornerRadius="5">
                    <Grid Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="ВОССТАНОВЛЕНИЕ ДАННЫХ" 
                                   Foreground="{StaticResource NeonBrush}" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,20"/>

                        <ListBox Grid.Row="1" 
                                 ItemsSource="{Binding SaveGames}" 
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 SelectedItem="{Binding SelectedSaveGame, Mode=TwoWay}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="Bord" 
                                                        BorderBrush="#1A222D" 
                                                        BorderThickness="0,0,0,1" 
                                                        Background="#0D1218" 
                                                        Padding="15" 
                                                        Margin="0,2">
                                                    <Grid>
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding SaveName}" 
                                                                       Foreground="White" 
                                                                       FontSize="18" 
                                                                       FontWeight="Bold"/>

                                                            <TextBlock Text="{Binding Date}" 
                                                                       Foreground="{StaticResource NeonBrush}" 
                                                                       FontSize="12" 
                                                                       Opacity="0.6"/>
                                                        </StackPanel>

                                                        <TextBlock Text="{Binding Factions}" 
                                                                   Foreground="Gray" 
                                                                   HorizontalAlignment="Right" 
                                                                   VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Bord" Property="Background" Value="#1A222D"/>
                                                        <Setter TargetName="Bord" Property="BorderBrush" Value="{StaticResource NeonBrush}"/>
                                                    </Trigger>

                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Bord" Property="Background" Value="#00F2FF"/>
                                                        <Setter Property="Foreground" Value="Black"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>

                        <StackPanel Grid.Row="2" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,20,0,0">
                            <Button x:Name="BtnLoadGameCancel" 
                                    Content="НАЗАД" 
                                    Style="{StaticResource RFGameButton}" 
                                    Width="200" 
                                    Height="50" 
                                    Margin="10,0" 
                                    Command="{Binding CancelLoadGameCommand}"/>

                            <Button x:Name="BtnLoadGameStart" 
                                    Content="ЗАГРУЗИТЬ" 
                                    Style="{StaticResource RFGameButton}" 
                                    Width="200" 
                                    Height="50" 
                                    Command="{Binding LoadSelectedGameCommand}"
                                    IsEnabled="{Binding SelectedSaveGame, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

             <!--Меню паузы--> 
            
            <Grid x:Name="PauseMenu" 
                  Background="#CC050505" 
                  Visibility="{Binding PauseMenuVisibility}">
                <Border BorderBrush="{StaticResource NeonBrush}" 
                        BorderThickness="1" 
                        Background="#0A0E14" 
                        Width="500" 
                        Height="500" 
                        CornerRadius="5">
                    <Grid Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="МЕНЮ ПАУЗЫ" 
                                   Foreground="{StaticResource NeonBrush}" 
                                   FontSize="36" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,30">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="{StaticResource NeonColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.7"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                            <Button Content="ПРОДОЛЖИТЬ" 
                                    Style="{StaticResource RFGameButton}" 
                                    Height="60" 
                                    Margin="0,10" 
                                    Command="{Binding ResumeGameCommand}"/>

                            <Button Content="СОХРАНИТЬ ИГРУ" 
                                    Style="{StaticResource RFGameButton}" 
                                    Height="60" 
                                    Margin="0,10" 
                                    Command="{Binding SaveGameCommand}"/>

                            <Button Content="ЗАГРУЗИТЬ ИГРУ" 
                                    Style="{StaticResource RFGameButton}" 
                                    Height="60" 
                                    Margin="0,10" 
                                    Command="{Binding LoadGameMenuCommand}"/>

                            <Button Content="ВЫЙТИ В МЕНЮ" 
                                    Style="{StaticResource RFGameButton}" 
                                    Height="60" 
                                    Margin="0,10" 
                                    Command="{Binding ShowMainMenuCommand}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,20,0,0">
                            <TextBlock Text="ВРЕМЯ ИГРЫ: " 
                                       Foreground="White" 
                                       FontSize="14"/>

                            <TextBlock Text="{Binding GameTimeText}" 
                                       Foreground="{StaticResource NeonBrush}" 
                                       FontSize="14" 
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Viewbox>
</Window>