<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="RFOnline_CCG.MainWindow"
        Title="RF Online: Card Warfare" Height="1080" Width="1920"
        WindowStyle="None" WindowState="Maximized" Background="#050505">

    <Window.Resources>
        <Color x:Key="NeonColor">#00F2FF</Color>
        <SolidColorBrush x:Key="NeonBrush" Color="{StaticResource NeonColor}"/>
        <SolidColorBrush x:Key="NeonCyan" Color="#00F2FF"/>
        <SolidColorBrush x:Key="EnergyOrange" Color="#FF8C00"/>
        <SolidColorBrush x:Key="AccretiaRed" Color="#FF3333"/>

        <Style x:Key="FactionButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="#10151B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="0,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Path Data="M 20,0 L 400,0 L 380,80 L 0,80 Z"
                                Stretch="Fill"
                         Fill="{TemplateBinding Background}" 
                         Stroke="{StaticResource NeonBrush}" 
                         StrokeThickness="2">
                                <Path.Effect>
                                    <DropShadowEffect Color="{StaticResource NeonColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                                </Path.Effect>
                            </Path>

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>

                            <Rectangle Width="10" Height="2" Fill="{StaticResource NeonBrush}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,5"/>
                            <Rectangle Width="10" Height="2" Fill="{StaticResource NeonBrush}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="30,5"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A2A3A"/>
                                <Setter Property="Foreground" Value="{StaticResource NeonBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RFGameButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#10151B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="0,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Path Data="M 20,0 L 400,0 L 380,80 L 0,80 Z" 
                                  Stretch="Fill"
                                  Fill="{TemplateBinding Background}" 
                                  Stroke="{StaticResource NeonBrush}" 
                                  StrokeThickness="2">
                                <Path.Effect>
                                    <DropShadowEffect Color="{StaticResource NeonColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                                </Path.Effect>
                            </Path>

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>

                            <Rectangle Width="10" Height="2" Fill="{StaticResource NeonBrush}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,5"/>
                            <Rectangle Width="10" Height="2" Fill="{StaticResource NeonBrush}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="30,5"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A2A3A"/>
                                <Setter Property="Foreground" Value="{StaticResource NeonBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DetailedCardStyle" TargetType="{x:Type ContentControl}">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="260"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ContentControl}">
                        <Grid x:Name="CardRoot" Cursor="Hand">
                            <Border Background="#10151B" BorderBrush="{StaticResource NeonCyan}" 
                        BorderThickness="1.5" CornerRadius="5">
                                <Border.Effect>
                                    <DropShadowEffect x:Name="CardGlow" Color="#00F2FF" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                                </Border.Effect>
                            </Border>

                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="120"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#20FFFFFF" CornerRadius="3,3,0,0">
                                    <Grid>
                                        <TextBlock Text="ACC-STRIKER" Foreground="White" FontWeight="Bold" 
                                       FontSize="12" VerticalAlignment="Center" Margin="35,0,5,0" />
                                        <Grid HorizontalAlignment="Left" Width="30" Margin="-5,0,0,0">
                                            <Path Data="M 7,0 L 23,0 L 30,15 L 23,30 L 7,30 L 0,15 Z" Fill="#FF8C00" Stretch="Fill"/>
                                            <TextBlock Text="4" Foreground="Black" FontWeight="Black" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Grid>
                                </Border>

                                <Border Grid.Row="1" Margin="0,2" BorderBrush="#33FFFFFF" BorderThickness="0,1">
                                    <Grid>
                                        <Rectangle Fill="#050505"/>
                                        <Image Source="your_image_path_here.png" Stretch="UniformToFill"/>

                                        <Rectangle Opacity="0.1">
                                            <Rectangle.Fill>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="White" Offset="0"/>
                                                    <GradientStop Color="Transparent" Offset="0.5"/>
                                                </LinearGradientBrush>
                                            </Rectangle.Fill>
                                        </Rectangle>
                                    </Grid>
                                </Border>

                                <Border Grid.Row="2" Background="#0AFFFFFF" Padding="5">
                                    <TextBlock Text="Осада: Наносит 2 ед. урона всем противникам при разыгрывании." 
                                   Foreground="#CCC" FontSize="10" TextWrapping="Wrap" FontStyle="Italic"/>
                                </Border>

                                <Grid Grid.Row="3">
                                    <Grid HorizontalAlignment="Left" Width="40">
                                        <Path Data="M 0,0 L 40,0 L 30,35 L 0,35 Z" Fill="#CC3333" Stretch="Fill" Opacity="0.8"/>
                                        <TextBlock Text="5" Foreground="White" FontWeight="Bold" FontSize="18" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    </Grid>
                                    <Grid HorizontalAlignment="Right" Width="40">
                                        <Path Data="M 10,0 L 40,0 L 40,35 L 0,35 Z" Fill="#33CC33" Stretch="Fill" Opacity="0.8"/>
                                        <TextBlock Text="4" Foreground="White" FontWeight="Bold" FontSize="18" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CardRoot" 
                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                             To="1.2" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="CardRoot" 
                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                             To="1.2" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="CardGlow" 
                                             Storyboard.TargetProperty="BlurRadius"
                                             To="30" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="CardGlow" 
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.8" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CardRoot" 
                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                             To="1.0" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="CardRoot" 
                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                             To="1.0" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="CardGlow" 
                                             Storyboard.TargetProperty="BlurRadius"
                                             To="10" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="CardGlow" 
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.4" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CardStyle" TargetType="{x:Type Border}">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="170"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#151B21"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeonCyan}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#00F2FF" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FieldSlot" TargetType="{x:Type Border}">
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="190"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#0AFFFFFF"/>
            <Setter Property="BorderBrush" Value="#22FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>
    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">
            <Grid x:Name="MainMenuUI" Visibility="Visible">
                <Rectangle>
                    <Rectangle.Fill>
                        <RadialGradientBrush Center="0.5,0.5" RadiusX="0.7" RadiusY="0.7">
                            <GradientStop Color="#101A24" Offset="0"/>
                            <GradientStop Color="#020405" Offset="1"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Path Data="M0,0 L1920,0 M0,100 L1920,100 M0,200 L1920,200" 
              Stroke="{StaticResource NeonBrush}" StrokeThickness="0.2" Opacity="0.1" Stretch="Fill"/>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                    <Grid Margin="0,0,0,100">
                        <TextBlock Text="RF: GENESIS" FontSize="86" Foreground="White" FontWeight="Black" HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="{StaticResource NeonColor}" BlurRadius="20" ShadowDepth="0"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="CARD WARFARE" FontSize="20" Foreground="{StaticResource NeonBrush}" 
                           FontWeight="Bold" HorizontalAlignment="Left" Margin="175,106,0,-21" />
                    </Grid>

                    <Button x:Name="BtnStartGame" Content="НАЧАТЬ ИГРУ" Style="{StaticResource RFGameButton}" Click="StartGame_Click"/>
                    <Button x:Name="BtnLoadGame" Content="ЗАГРУЗИТЬ ИГРУ" Style="{StaticResource RFGameButton}" Click="BackToMenu_Click"/>
                    <Button x:Name="BtnExit" Content="ВЫХОД" Style="{StaticResource RFGameButton}" Click="Exit_Click"/>

                </StackPanel>

                <Canvas>
                    <Path Data="M 0,0 L 200,0 L 180,20 L 20,20 L 0,200 Z" Fill="#10151B" Stroke="{StaticResource NeonBrush}" StrokeThickness="1" Opacity="0.6"/>

                    <Path Data="M 1920,1080 L 1720,1080 L 1740,1060 L 1900,1060 L 1920,880 Z" Fill="#10151B" Stroke="{StaticResource NeonBrush}" StrokeThickness="1" Opacity="0.6" Canvas.Left="0" Canvas.Top="0"/>
                </Canvas>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="30">
                    <TextBlock Text="v 0.1.4-BETA" Foreground="#444" Margin="10,0"/>
                    <TextBlock Text="TeamForProga" Foreground="LimeGreen" Opacity="0.7"/>
                </StackPanel>
            </Grid>
            <Grid x:Name="GameBoardUI" Visibility="Collapsed">

                <Grid.Background>
                    <RadialGradientBrush Center="0.5,0.5" RadiusX="1" RadiusY="1">
                        <GradientStop Color="#101A24" Offset="0"/>
                        <GradientStop Color="#020405" Offset="1"/>
                    </RadialGradientBrush>
                </Grid.Background>
                <Grid Margin="20">

                    <StackPanel x:Name="PlayerHand" Orientation="Horizontal" 
        HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="1">
                        <ContentControl Style="{StaticResource DetailedCardStyle}" 
                MouseDown="Card_MouseDown" 
                MouseMove="Card_MouseMove" 
                MouseUp="Card_MouseUp"/>
                    </StackPanel>

                    <Grid Height="1040" Width="1880">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="250"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="1" VerticalAlignment="Top">
                            <ItemsControl HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="60" Height="90" Background="#333" BorderBrush="Gray" BorderThickness="1" Margin="-10,0"/>
                                    <Border Width="60" Height="90" Background="#333" BorderBrush="Gray" BorderThickness="1" Margin="-10,0"/>
                                </StackPanel>
                            </ItemsControl>

                            <Border BorderBrush="Red" BorderThickness="0,0,0,2" HorizontalAlignment="Center" Padding="20,5" Margin="0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ENEMY" Foreground="Red" FontSize="20" FontWeight="Bold"/>
                                    <TextBlock Text=" HP: 30" Foreground="White" FontSize="20" Margin="20,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <Grid Grid.Column="1" VerticalAlignment="Center">
                            <Border x:Name="DropZone" Height="211" VerticalAlignment="Top" 
                        BorderBrush="{StaticResource NeonCyan}" BorderThickness="1" Opacity="0.2" Background="Transparent" Margin="106,221,104,0">
                                <TextBlock Text="DEPLOYMENT AREA" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource NeonCyan}"/>
                            </Border>
                            <StackPanel>
                                <ItemsControl HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Style="{StaticResource FieldSlot}">
                                            <Border Style="{StaticResource CardStyle}" BorderBrush="Red">
                                                <TextBlock Text="Unit" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </Border>
                                        <Border Style="{StaticResource FieldSlot}"/>
                                        <Border Style="{StaticResource FieldSlot}"/>
                                        <Border Style="{StaticResource FieldSlot}"/>
                                    </StackPanel>
                                </ItemsControl>

                                <Border Height="2" Background="{StaticResource NeonCyan}" Margin="100,20" Opacity="0.2">
                                    <Border.Effect>
                                        <BlurEffect Radius="5"/>
                                    </Border.Effect>
                                </Border>

                                <ItemsControl HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Style="{StaticResource FieldSlot}">
                                            <Border Style="{StaticResource CardStyle}">
                                                <Grid>
                                                    <TextBlock Text="MAU BUSTER" Foreground="White" FontSize="10" VerticalAlignment="Top" Margin="5"/>
                                                    <TextBlock Text="5 / 5" Foreground="{StaticResource NeonCyan}" FontSize="14" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5"/>
                                                </Grid>
                                            </Border>
                                        </Border>
                                        <Border Style="{StaticResource FieldSlot}"/>
                                        <Border Style="{StaticResource FieldSlot}"/>
                                        <Border Style="{StaticResource FieldSlot}">
                                            <Border Style="{StaticResource CardStyle}" BorderBrush="Yellow"/>
                                        </Border>
                                    </StackPanel>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Column="1" VerticalAlignment="Bottom" Height="250">
                            <Border Background="#10FFFFFF" CornerRadius="100,100,0,0" Margin="50,50,50,-56"/>

                            <StackPanel VerticalAlignment="Bottom">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                    <TextBlock Text="ENERGY: " Foreground="{StaticResource EnergyOrange}" FontSize="18"/>
                                    <TextBlock Text="7 / 10" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                </StackPanel>

                                <ItemsControl HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <Button Content="ЗАВЕРШИТЬ ХОД" Width="200" Height="60" Style="{StaticResource RFGameButton}" FontSize="18"/>
                            <Border Margin="0,50,0,0" Width="120" Height="170" BorderBrush="#444" BorderThickness="2" CornerRadius="5">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="КОЛОДА" Foreground="#444" HorizontalAlignment="Center"/>
                                    <TextBlock Text="24" Foreground="White" FontSize="30" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="0" VerticalAlignment="Bottom" Margin="20">
                            <Border Background="#1A222D" Padding="15" CornerRadius="5" BorderBrush="{StaticResource NeonCyan}" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="PLAYER_01" Foreground="{StaticResource NeonCyan}" FontWeight="Bold"/>
                                    <ProgressBar Value="70" Height="10" Foreground="LimeGreen" Background="#050505" BorderThickness="0" Margin="0,10"/>
                                    <TextBlock Text="RANK: INQUISITOR" Foreground="Gray" FontSize="10"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                    </Grid>
                </Grid>
                <Button Content="Меню" Width="NaN" Height="NaN" FontSize="25" Margin="47,60,1673,960" Background="#FF0B1219" BorderBrush="#FF3C0606" Foreground="#FFF7F7F7"/>
            </Grid>
            <Grid x:Name="NewGameScreen" Background="#CC050505" Visibility="Collapsed">
                <Border BorderBrush="{StaticResource NeonBrush}" BorderThickness="1" Background="#0A0E14" 
            Width="900" Height="600" CornerRadius="5">
                    <Grid Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="ПОДГОТОВКА К СРАЖЕНИЮ" Foreground="{StaticResource NeonBrush}" 
                       FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="ИГРОК 1" Foreground="White" Opacity="0.5" Margin="0,0,0,10"/>
                                <TextBox Text="PLAYER_ONE" Height="40" Background="#151A20" Foreground="White" 
                             BorderBrush="{StaticResource NeonBrush}" Padding="10,5" FontSize="18" Margin="0,0,0,20"/>

                                <TextBlock Text="ВЫБЕРИТЕ ФРАКЦИЮ" Foreground="White" FontSize="12" Margin="0,0,0,10"/>
                                <UniformGrid Columns="1">
                                    <RadioButton Content="ACCRETIA EMPIRE" Tag="#FF3333" Foreground="#FF3333" Style="{StaticResource FactionButtonStyle}" IsChecked="True" Height="51" Width="251" FontSize="20"/>
                                    <RadioButton Content="BELLATO UNION" Tag="#3399FF" Foreground="#3399FF" Style="{StaticResource FactionButtonStyle}" Height="50" Width="251" FontSize="20"/>
                                    <RadioButton Content="CORA ALLIANCE" Tag="#CC33FF" Foreground="#CC33FF" Style="{StaticResource FactionButtonStyle}" Height="50" Width="251" FontSize="20"/>
                                </UniformGrid>
                            </StackPanel>

                            <TextBlock Grid.Column="1" Text="VS" Foreground="White" FontSize="48" 
                           FontWeight="Black" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.2"/>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="ИГРОК 2" Foreground="White" Opacity="0.5" Margin="0,0,0,10"/>
                                <TextBox Text="PLAYER_TWO" Height="40" Background="#151A20" Foreground="White" 
                             BorderBrush="{StaticResource NeonBrush}" Padding="10,5" FontSize="18" Margin="0,0,0,20"/>

                                <TextBlock Text="ВЫБЕРИТЕ ФРАКЦИЮ" Foreground="White" FontSize="12" Margin="0,0,0,10"/>
                                <UniformGrid Columns="1">
                                    <RadioButton Content="ACCRETIA EMPIRE" Tag="#FF3333" Foreground="#FF3333" Style="{StaticResource FactionButtonStyle}" Height="53" Width="267" FontSize="18" />
                                    <RadioButton Content="BELLATO UNION" Tag="#3399FF" Foreground="#3399FF" Style="{StaticResource FactionButtonStyle}" IsChecked="True" Height="54" Width="267" FontSize="18"/>
                                    <RadioButton Content="CORA ALLIANCE" Tag="#CC33FF" Foreground="#CC33FF" Style="{StaticResource FactionButtonStyle}" Height="53" Width="267" FontSize="18"/>
                                </UniformGrid>
                            </StackPanel>
                        </Grid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button x:Name="BtnNewGameCancel" Content="ОТМЕНА" Style="{StaticResource RFGameButton}" Width="200" Height="50" Margin="10,0" Click="BtnNewGameCancel_Click"/>
                            <Button x:Name="BtnStartBoardGame" Content="В БОЙ" Style="{StaticResource RFGameButton}" Width="250" Height="60" FontWeight="Black" Click="BtnStartBoardGame_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
            <Grid x:Name="LoadGameScreen" Background="#CC050505" Visibility="Collapsed">
                <Border BorderBrush="{StaticResource NeonBrush}" BorderThickness="1" Background="#0A0E14" 
           Width="700" Height="600" CornerRadius="5">
                    <Grid Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="ВОССТАНОВЛЕНИЕ ДАННЫХ" Foreground="{StaticResource NeonBrush}" 
                      FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

                        <ListBox Grid.Row="1" Background="Transparent" BorderThickness="0">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="Bord" BorderBrush="#1A222D" BorderThickness="0,0,0,1" Background="#0D1218" Padding="15" Margin="0,2">
                                                    <Grid>
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding SaveName}" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                                            <TextBlock Text="{Binding Date}" Foreground="{StaticResource NeonBrush}" FontSize="12" Opacity="0.6"/>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding Factions}" Foreground="Gray" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Bord" Property="Background" Value="#1A222D"/>
                                                        <Setter TargetName="Bord" Property="BorderBrush" Value="{StaticResource NeonBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Bord" Property="Background" Value="#00F2FF"/>
                                                        <Setter Property="Foreground" Value="Black"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>

