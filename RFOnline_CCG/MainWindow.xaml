<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RFOnline_CCG"
        xmlns:core ="clr-namespace:RFCardGame.Core;assembly=RFCardGame"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        x:Class="RFOnline_CCG.MainWindow"
        Title="RF Online: Card Warfare" 
        Height="1080" 
        Width="1920"
        WindowStyle="None" 
        WindowState="Maximized" 
        Background="#050505">

    <Window.Resources>
        <!-- Конвертеры -->
        <local:TypeToVisibilityConverter x:Key="TypeToVisibilityConverter"/>
        <local:StateToColorConverter x:Key="StateToColorConverter"/>
        <local:SelectedToBorderBrushConverter x:Key="SelectedToBorderBrushConverter"/>


        <!-- Цвета -->
        <Color x:Key="NeonColor">#00F2FF</Color>
        <SolidColorBrush x:Key="NeonBrush" Color="{StaticResource NeonColor}"/>
        <SolidColorBrush x:Key="NeonCyan" Color="#00F2FF"/>
        <SolidColorBrush x:Key="EnergyOrange" Color="#FF8C00"/>
        <SolidColorBrush x:Key="AccretiaRed" Color="#FF3333"/>

        <!-- Стили -->
        <!-- Стиль для расширенного ToolTip -->
        <Style x:Key="DetailedToolTipStyle" TargetType="ToolTip">
            <Setter Property="Background" Value="#1A222D"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeonCyan}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="MaxWidth" Value="300"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="#00F2FF" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="CardToolTipTemplate">
            <StackPanel>
                <!-- Заголовок -->
                <Border Background="#2A3A4A" CornerRadius="3" Padding="5" Margin="0,0,0,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" 
                           Foreground="White" 
                           FontSize="14" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>

                        <!-- Стоимость -->
                        <Border Width="25" Height="25" 
                        CornerRadius="12.5" 
                        Background="#FF8C00"
                        Margin="10,0,0,0">
                            <TextBlock Text="{Binding Cost}" 
                               Foreground="Black" 
                               FontWeight="Black"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Фракция и тип -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Border Background="#3A4A5A" CornerRadius="3" Padding="3,2">
                        <TextBlock Text="{Binding Faction}" 
                           Foreground="#AAA" 
                           FontSize="10"/>
                    </Border>
                    <Border Background="#3A4A5A" CornerRadius="3" Padding="3,2" Margin="5,0,0,0">
                        <TextBlock Text="{Binding Type}" 
                           Foreground="#AAA" 
                           FontSize="10"/>
                    </Border>
                </StackPanel>

                <!-- Статистика для существ -->
                <StackPanel Visibility="{Binding Type, Converter={StaticResource TypeToVisibilityConverter}}"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10">
                    <Border Background="#CC3333" CornerRadius="3" Padding="10,5" Margin="0,0,5,0">
                        <StackPanel>
                            <TextBlock Text="АТАКА" Foreground="White" FontSize="9" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Attack}" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#33CC33" CornerRadius="3" Padding="10,5">
                        <StackPanel>
                            <TextBlock Text="ЗДОРОВЬЕ" Foreground="White" FontSize="9" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentHealth}" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center">
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Способности/эффекты -->
                <Border Background="#101820" CornerRadius="3" Padding="8" Margin="0,0,0,5">
                    <TextBlock Text="{Binding EffectText}" 
                       Foreground="#CCC" 
                       FontSize="11" 
                       TextWrapping="Wrap"
                       FontStyle="Italic"/>
                </Border>

                <!-- Лор (история) -->
                <Border Background="#0A1018" CornerRadius="3" Padding="8">
                    <TextBlock Text="{Binding Lore}" 
                       Foreground="#888" 
                       FontSize="10" 
                       TextWrapping="Wrap"
                       FontStyle="Italic"/>
                </Border>

                <!-- Для существ - состояние -->
                <StackPanel Visibility="{Binding Type, Converter={StaticResource TypeToVisibilityConverter}, ConverterParameter=creature}"
                    Margin="0,5,0,0">
                    <TextBlock Text="СОСТОЯНИЕ:" Foreground="#666" FontSize="9" Margin="0,0,0,2"/>
                    <Border Background="#2A3A4A" CornerRadius="3" Padding="5">
                        <TextBlock Text="{Binding State}" 
                           Foreground="{Binding State, Converter={StaticResource StateToColorConverter}}"
                           FontSize="10"
                           FontWeight="Bold"/>
                    </Border>
                </StackPanel>

                <!-- Для заклинаний - дополнительная информация (ТОЛЬКО если это SpellCard) -->
                <StackPanel Visibility="{Binding Type, Converter={StaticResource TypeToVisibilityConverter}, ConverterParameter=spell}">
                    <TextBlock Text="ТИП ЗАКЛИНАНИЯ:" Foreground="#666" FontSize="9" Margin="0,5,0,2"/>
                    <Border Background="#2A3A4A" CornerRadius="3" Padding="5">
                        <TextBlock Text="{Binding Subtype}" 
                           Foreground="#AAA" 
                           FontSize="10"/>
                    </Border>

                    <TextBlock Text="СИЛА:" Foreground="#666" FontSize="9" Margin="0,5,0,2"/>
                    <Border Background="#2A3A4A" CornerRadius="3" Padding="5">
                        <TextBlock Text="{Binding Power}" 
                           Foreground="#AAA" 
                           FontSize="10"/>
                    </Border>
                </StackPanel>

                <!-- Для артефактов - дополнительная информация (ТОЛЬКО если это ArtifactCard) -->
                <StackPanel Visibility="{Binding Type, Converter={StaticResource TypeToVisibilityConverter}, ConverterParameter=artifact}">
                    <TextBlock Text="ТИП:" Foreground="#666" FontSize="9" Margin="0,5,0,2"/>
                    <Border Background="#2A3A4A" CornerRadius="3" Padding="5">
                        <TextBlock Text="АРТЕФАКТ" 
                           Foreground="#AAA" 
                           FontSize="10"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
        <Style x:Key="SelectableCardStyle" TargetType="Border">
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="160"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#1A2A3A"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeonCyan}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ClipToBounds" Value="False"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#00F2FF" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FactionButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="#10151B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="0,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Path Data="M 20,0 L 400,0 L 380,80 L 0,80 Z"
                                Stretch="Fill"
                                Fill="{TemplateBinding Background}" 
                                Stroke="{StaticResource NeonBrush}" 
                                StrokeThickness="2">
                                <Path.Effect>
                                    <DropShadowEffect Color="{StaticResource NeonColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                                </Path.Effect>
                            </Path>

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>

                            <Rectangle Width="10" Height="2" Fill="{StaticResource NeonBrush}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,5"/>
                            <Rectangle Width="10" Height="2" Fill="{StaticResource NeonBrush}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="30,5"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A2A3A"/>
                                <Setter Property="Foreground" Value="{StaticResource NeonBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RFGameButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#10151B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="0,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Path Data="M 20,0 L 400,0 L 380,80 L 0,80 Z" 
                                  Stretch="Fill"
                                  Fill="{TemplateBinding Background}" 
                                  Stroke="{StaticResource NeonBrush}" 
                                  StrokeThickness="2">
                                <Path.Effect>
                                    <DropShadowEffect Color="{StaticResource NeonColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                                </Path.Effect>
                            </Path>

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>

                            <Rectangle Width="10" Height="2" Fill="{StaticResource NeonBrush}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,5"/>
                            <Rectangle Width="10" Height="2" Fill="{StaticResource NeonBrush}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="30,5"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A2A3A"/>
                                <Setter Property="Foreground" Value="{StaticResource NeonBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Упрощенный стиль карты для привязки данных -->
        <Style x:Key="SimpleCardStyle" TargetType="Border">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="140"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#1A2A3A"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeonCyan}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#00F2FF" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FieldSlot" TargetType="Border">
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="190"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#0AFFFFFF"/>
            <Setter Property="BorderBrush" Value="#22FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>

        <!-- Стиль для существа на поле -->
        <Style x:Key="CreatureFieldStyle" TargetType="Border">
            <Setter Property="Width" Value="130"/>
            <Setter Property="Height" Value="180"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Background" Value="#152035"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- DataTemplate для карты в руке -->
        <!-- В Window.Resources обновляем HandCardTemplate -->
        <DataTemplate x:Key="HandCardTemplate">
            <Border x:Name="CardBorder" 
            Width="110" Height="160" 
            Margin="5" 
            Background="#1A2A3A"
            BorderBrush="{StaticResource NeonCyan}"
            BorderThickness="1.5"
            CornerRadius="6"
            Cursor="Hand"
            ClipToBounds="False"
            MouseDown="Card_MouseDown"
            MouseMove="Card_MouseMove"
            MouseUp="Card_MouseUp"
            Tag="{Binding}">

                <!-- Подробный ToolTip -->
                <Border.ToolTip>
                    <ToolTip Style="{StaticResource DetailedToolTipStyle}">
                        <ContentControl Content="{Binding}" 
                                ContentTemplate="{StaticResource CardToolTipTemplate}"/>
                    </ToolTip>
                </Border.ToolTip>

                <Border.Effect>
                    <DropShadowEffect x:Name="CardGlow" 
                              BlurRadius="10" 
                              ShadowDepth="0" 
                              Color="#00F2FF" 
                              Opacity="0.3"/>
                </Border.Effect>

                <!-- Контент карты (упрощенный, так как подробности в ToolTip) -->
                <Grid ClipToBounds="False">
                    <!-- Стоимость -->
                    <Border Width="24" Height="24" 
                    CornerRadius="12" 
                    Background="#FF8C00"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="3">
                        <TextBlock Text="{Binding Cost}" 
                           Foreground="Black" 
                           FontWeight="Black"
                           FontSize="13"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    </Border>

                    <!-- Название (сокращенное) -->
                    <TextBlock Text="{Binding Name}" 
                       Foreground="White" 
                       FontSize="11" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="5,30,5,0"
                       TextWrapping="Wrap"
                       TextTrimming="CharacterEllipsis"
                       MaxHeight="40"/>

                    <!-- Статистика для существ -->
                    <StackPanel Visibility="{Binding Type, Converter={StaticResource TypeToVisibilityConverter}}"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                        <Grid>
                            <Border Background="#CC3333" 
                            Width="30" 
                            Height="26"
                            CornerRadius="3,0,0,3">
                                <TextBlock Text="{Binding Attack}" 
                                   Foreground="White" 
                                   FontWeight="Bold"
                                   FontSize="13"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#33CC33" 
                            Width="30" 
                            Height="26"
                            CornerRadius="0,3,3,0"
                            HorizontalAlignment="Right">
                                <TextBlock Text="{Binding CurrentHealth}" 
                                   Foreground="White" 
                                   FontWeight="Bold"
                                   FontSize="13"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </StackPanel>

                    <!-- Иконка типа -->
                    <Border Background="#202020"
                    CornerRadius="3"
                    Width="45" Height="22"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,15">
                        <TextBlock Text="{Binding Type}" 
                           Foreground="#AAA"
                           FontSize="10"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>
        <!-- DataTemplate для существа на поле -->
        <DataTemplate x:Key="CreatureFieldTemplate">
            <Border x:Name="CreatureBorder"
            Width="130" Height="180"
            Margin="8"
            Background="#152035"
            BorderBrush="#33FFFFFF"
            BorderThickness="1"
            CornerRadius="5"
            Cursor="Hand"
            ClipToBounds="False"
            MouseDown="Creature_MouseDown"
            Tag="{Binding}">

                <!-- Подробный ToolTip -->
                <Border.ToolTip>
                    <ToolTip Style="{StaticResource DetailedToolTipStyle}">
                        <ContentControl Content="{Binding}" 
                                ContentTemplate="{StaticResource CardToolTipTemplate}"/>
                    </ToolTip>
                </Border.ToolTip>

                <Border.Effect>
                    <DropShadowEffect x:Name="CreatureGlow" 
                              BlurRadius="5" 
                              ShadowDepth="0" 
                              Color="#00F2FF" 
                              Opacity="0.2"/>
                </Border.Effect>

                <!-- Контент существа (упрощенный) -->
                <StackPanel>
                    <!-- Индикатор состояния -->
                    <Border Height="3" 
                    Background="{Binding State, Converter={StaticResource StateToColorConverter}}"
                    Margin="2"/>

                    <!-- Название (сокращенное) -->
                    <TextBlock Text="{Binding Name}" 
                       Foreground="White" 
                       FontSize="10"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="5,5"
                       TextWrapping="Wrap"
                       TextTrimming="CharacterEllipsis"/>

                    <!-- Иконка существа -->
                    <Border Height="80" 
                    Background="#0AFFFFFF" 
                    Margin="5,0">
                        <TextBlock Text="{Binding Faction}" 
                           Foreground="#33FFFFFF"
                           FontSize="9"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    </Border>

                    <!-- Статистика -->
                    <Grid Margin="5,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                        Background="#CC3333" 
                        CornerRadius="3">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="ATK" 
                                   Foreground="White" 
                                   FontSize="8"
                                   VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Attack}" 
                                   Foreground="White" 
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="5,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" 
                        Background="#33CC33" 
                        CornerRadius="3"
                        Margin="5,0,0,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="HP" 
                                   Foreground="White" 
                                   FontSize="8"
                                   VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding CurrentHealth}" 
                                   Foreground="White" 
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="5,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Состояние -->
                    <TextBlock Text="{Binding State}" 
                       Foreground="#AAA"
                       FontSize="8"
                       HorizontalAlignment="Center"
                       Margin="0,5"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">
            <Grid x:Name="MainGrid">
                <!-- ГЛАВНОЕ МЕНЮ -->
                <Grid x:Name="MainMenuUI" Visibility="Visible">
                    <Rectangle>
                        <Rectangle.Fill>
                            <RadialGradientBrush Center="0.5,0.5" RadiusX="0.7" RadiusY="0.7">
                                <GradientStop Color="#101A24" Offset="0"/>
                                <GradientStop Color="#020405" Offset="1"/>
                            </RadialGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <Path Data="M0,0 L1920,0 M0,100 L1920,100 M0,200 L1920,200" 
                      Stroke="{StaticResource NeonBrush}" StrokeThickness="0.2" Opacity="0.1" Stretch="Fill"/>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Grid Margin="0,0,0,100">
                            <TextBlock Text="RF: GENESIS" FontSize="86" Foreground="White" FontWeight="Black" HorizontalAlignment="Center">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="{StaticResource NeonColor}" BlurRadius="20" ShadowDepth="0"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Text="CARD WARFARE" FontSize="20" Foreground="{StaticResource NeonBrush}" 
                                   FontWeight="Bold" HorizontalAlignment="Left" Margin="175,106,0,-21"/>
                        </Grid>

                        <Button x:Name="BtnStartGame" Content="НАЧАТЬ ИГРУ" Style="{StaticResource RFGameButton}" Click="StartGame_Click"/>
                        <Button x:Name="BtnLoadGame" Content="ЗАГРУЗИТЬ ИГРУ" Style="{StaticResource RFGameButton}" Click="BackToMenu_Click"/>
                        <Button x:Name="BtnExit" Content="ВЫХОД" Style="{StaticResource RFGameButton}" Click="Exit_Click"/>
                    </StackPanel>

                    <Canvas>
                        <Path Data="M 0,0 L 200,0 L 180,20 L 20,20 L 0,200 Z" Fill="#10151B" Stroke="{StaticResource NeonBrush}" StrokeThickness="1" Opacity="0.6"/>
                        <Path Data="M 1920,1080 L 1720,1080 L 1740,1060 L 1900,1060 L 1920,880 Z" Fill="#10151B" Stroke="{StaticResource NeonBrush}" StrokeThickness="1" Opacity="0.6" Canvas.Left="0" Canvas.Top="0"/>
                    </Canvas>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="30">
                        <TextBlock Text="v 0.1.4-BETA" Foreground="#444" Margin="10,0"/>
                        <TextBlock Text="TeamForProga" Foreground="LimeGreen" Opacity="0.7"/>
                    </StackPanel>
                </Grid>

                <!-- ИГРОВОЕ ПОЛЕ -->
                <!-- ОБНОВЛЕННЫЙ GameBoardUI - только изменения в расположении -->

                <Grid x:Name="GameBoardUI" Visibility="Collapsed">
                    <Grid.Background>
                        <RadialGradientBrush Center="0.5,0.5" RadiusX="1" RadiusY="1">
                            <GradientStop Color="#101A24" Offset="0"/>
                            <GradientStop Color="#020405" Offset="1"/>
                        </RadialGradientBrush>
                    </Grid.Background>

                    <Grid Margin="22,20,18,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="250"/>
                        </Grid.ColumnDefinitions>

                        <!-- ЛЕВАЯ ПАНЕЛЬ: ИНФОРМАЦИЯ ИГРОКА -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Bottom" Margin="20">
                            <Border Background="#1A222D" Padding="15" CornerRadius="5" 
                    BorderBrush="{StaticResource NeonCyan}" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="{Binding PlayerName}" 
                               Foreground="{StaticResource NeonCyan}" 
                               FontWeight="Bold" 
                               FontSize="16"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="HP: " Foreground="#FF3333" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding PlayerHealth}" 
                                   Foreground="White" 
                                   FontWeight="Bold"
                                   FontSize="18"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="Энергия: " Foreground="{StaticResource EnergyOrange}"/>
                                        <TextBlock Text="{Binding PlayerEnergy}" Foreground="White" FontWeight="Bold"/>
                                        <TextBlock Text="/" Foreground="#666"/>
                                        <TextBlock Text="{Binding PlayerMaxEnergy}" Foreground="#AAA"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding TurnInfo}" 
                               Foreground="#00F2FF" 
                               FontSize="12" 
                               Margin="0,10,0,0"/>
                                </StackPanel>
                                
                            </Border>

                            <!-- Колода игрока -->
                            <Border Margin="0,20,0,0" Width="120" Height="170" 
                    BorderBrush="#444" BorderThickness="2" CornerRadius="5">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="КОЛОДА" Foreground="#444" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding PlayerDeckCount}" 
                               Foreground="White" 
                               FontSize="30" 
                               HorizontalAlignment="Center"
                               Margin="0,5"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- ЦЕНТРАЛЬНАЯ ЧАСТЬ: ПОЛЕ БОЯ -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70"/>
                                <!-- Информация о сопернике -->
                                <RowDefinition Height="200"/>
                                <!-- Поле существ соперника -->
                                <RowDefinition Height="*"/>
                                <!-- Центр поля -->
                                <RowDefinition Height="200"/>
                                <!-- Поле существ игрока -->
                                <RowDefinition Height="200"/>
                                <!-- Рука игрока -->
                            </Grid.RowDefinitions>

                            <!-- 1. ИНФОРМАЦИЯ О СОПЕРНИКЕ -->
                            <Border Grid.Row="0" 
                    Background="#1A0A0A" 
                    CornerRadius="0,0,10,10" 
                    Margin="100,0,100,0"
                    Height="60"
                    VerticalAlignment="Top"
                    BorderBrush="#FF3333" 
                    BorderThickness="0,0,0,2">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding OpponentName}" 
                               Foreground="#FF6666" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Margin="0,0,20,0"/>
                                    <TextBlock Text="HP: " Foreground="White" FontSize="18"/>
                                    <TextBlock Text="{Binding OpponentHealth}" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Margin="0,0,30,0"/>
                                    <TextBlock Text="Энергия: " Foreground="#666" FontSize="16"/>
                                    <TextBlock Text="{Binding OpponentEnergy}" Foreground="#AAA" FontSize="18" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <!-- 2. ПОЛЕ СУЩЕСТВ СОПЕРНИКА -->
                            <ScrollViewer Grid.Row="1"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Hidden"
                          Margin="0,10"
                          ClipToBounds="False">
                                <ItemsControl ItemsSource="{Binding OpponentField}"
                              ItemTemplate="{StaticResource CreatureFieldTemplate}"
                              HorizontalAlignment="Center"
                              ClipToBounds="False">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" 
                                       VerticalAlignment="Center"
                                       Margin="10,0"
                                       ClipToBounds="False"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- 3. ЦЕНТР ПОЛЯ -->
                            <Grid Grid.Row="2">
                                <Border x:Name="DropZone" 
                        Height="180" 
                        VerticalAlignment="Center"
                        BorderBrush="{StaticResource NeonCyan}" 
                        BorderThickness="2" 
                        Opacity="0.2" 
                        Background="Transparent"
                        CornerRadius="5"
                        Margin="100,0,100,0">
                                    <TextBlock Text="ПЕРЕТАЩИТЕ КАРТУ СЮДА" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center" 
                               Foreground="{StaticResource NeonCyan}"
                               FontSize="16"
                               FontWeight="Bold"/>
                                </Border>

                                <!-- Разделительная линия -->
                                <Border Height="2" 
                        Background="{StaticResource NeonCyan}" 
                        VerticalAlignment="Center"
                        Opacity="0.1"
                        Margin="150,0,150,0">
                                    <Border.Effect>
                                        <BlurEffect Radius="5"/>
                                    </Border.Effect>
                                </Border>
                            </Grid>

                            <!-- 4. ПОЛЕ СУЩЕСТВ ИГРОКА -->
                            <ScrollViewer Grid.Row="3"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Hidden"
                          Margin="0,10"
                          ClipToBounds="False">
                                <ItemsControl ItemsSource="{Binding PlayerField}"
                              ItemTemplate="{StaticResource CreatureFieldTemplate}"
                              HorizontalAlignment="Center"
                              ClipToBounds="False">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" 
                                       VerticalAlignment="Center"
                                       Margin="10,0"
                                       ClipToBounds="False"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- 5. РУКА ИГРОКА - ИСПРАВЛЕНА -->
                            <Border Grid.Row="4" 
                    Background="#101A24" 
                    CornerRadius="20,20,0,0" 
                    Margin="0,0,0,0"
                    VerticalAlignment="Bottom"
                    Height="200"
                    ClipToBounds="False">

                                <Grid ClipToBounds="False">
                                    <!-- Заголовок руки -->
                                    <TextBlock Text="ВАША РУКА" 
                               Foreground="#666" 
                               FontSize="12" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="0,15,0,0"/>

                                    <!-- Прокрутка для карт -->
                                    <ScrollViewer x:Name="HandScrollViewer"
                                  HorizontalScrollBarVisibility="Auto" 
                                  VerticalScrollBarVisibility="Disabled"
                                  VerticalAlignment="Center"
                                  Height="160"
                                  Margin="40,35,40,10"
                                  ClipToBounds="False">
                                        <ItemsControl x:Name="PlayerHandItems" 
                                      ItemsSource="{Binding PlayerHand}"
                                      ItemTemplate="{StaticResource HandCardTemplate}"
                                      ClipToBounds="False">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal" 
                                               VerticalAlignment="Center"
                                               Margin="10,0"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                    </ScrollViewer>

                                    <!-- Кнопки прокрутки -->
                                    <Button Content="◀" 
                            Width="30" Height="30"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="5,0,0,0"
                            Background="#1A2A3A"
                            Foreground="{StaticResource NeonCyan}"
                            BorderBrush="{StaticResource NeonCyan}"
                            BorderThickness="1"
                            Click="ScrollLeft_Click"/>

                                    <Button Content="▶" 
                            Width="30" Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,5,0"
                            Background="#1A2A3A"
                            Foreground="{StaticResource NeonCyan}"
                            BorderBrush="{StaticResource NeonCyan}"
                            BorderThickness="1"
                            Click="ScrollRight_Click"/>

                                    <!-- Индикатор -->
                                    <TextBlock Text="{Binding PlayerHand.Count, StringFormat='Карт: {0}'}" 
                               Foreground="#AAA" 
                               FontSize="10" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"
                               Margin="0,0,0,10"/>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- ПРАВАЯ ПАНЕЛЬ: ДЕЙСТВИЯ -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="20">
                            <!-- В правой панели, над кнопками -->
                            <Border Background="#1A222D" Padding="10" CornerRadius="5" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="{Binding AttackInfo}" 
                   Foreground="{StaticResource NeonCyan}" 
                   FontSize="12" 
                   TextWrapping="Wrap"/>

                                    <TextBlock Text="{Binding DirectAttackInfo}" 
                   Foreground="Orange" 
                   FontSize="11" 
                   Margin="0,5,0,0"
                   TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            <Button Content="ЗАВЕРШИТЬ ХОД" 
                    Width="200" 
                    Height="60" 
                    Style="{StaticResource RFGameButton}" 
                    FontSize="18"
                    Click="BtnEndTurn_Click"/>

                            <Button Content="АТАКОВАТЬ" 
                    Width="200" 
                    Height="50" 
                    Style="{StaticResource RFGameButton}" 
                    FontSize="16"
                    Margin="0,20,0,0"
                    Click="BtnAttack_Click"/>
                            <Button Content="ПРЯМАЯ АТАКА" 
        Width="200" 
        Height="50" 
        Style="{StaticResource RFGameButton}" 
        FontSize="16"
        Margin="0,10,0,0"
        Click="BtnDirectAttack_Click"/>

                            <Button Content="СЫГРАТЬ КАРТУ" 
                    Width="200" 
                    Height="50" 
                    Style="{StaticResource RFGameButton}" 
                    FontSize="16"
                    Margin="0,10,0,0"
                    Click="BtnPlayCard_Click"/>

                            <Button Content="СОХРАНИТЬ" 
                    Width="200" 
                    Height="50" 
                    Style="{StaticResource RFGameButton}" 
                    FontSize="16"
                    Margin="0,10,0,0"
                    Click="BtnSaveGame_Click"/>

                            <Border Margin="0,50,0,0" 
                    Width="120" 
                    Height="170" 
                    BorderBrush="#444" 
                    BorderThickness="2" 
                    CornerRadius="5">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="ЛОГ" Foreground="#444" HorizontalAlignment="Center"/>
                                    <ScrollViewer Height="120" VerticalScrollBarVisibility="Auto">
                                        <ItemsControl ItemsSource="{Binding GameLog}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" 
                                               Foreground="#AAA" 
                                               FontSize="10" 
                                               TextWrapping="Wrap"
                                               Margin="0,2"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- КНОПКА МЕНЮ -->
                        <Button Content="Меню" 
                Width="100" 
                Height="40" 
                FontSize="16" 
                Margin="20,20,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#0B1219" 
                BorderBrush="#3C0606" 
                Foreground="#F7F7F7"
                Click="BackToMenu_Click"/>
                    </Grid>
                </Grid>
                <!-- ЭКРАН НОВОЙ ИГРЫ -->
                <Grid x:Name="NewGameScreen" Background="#CC050505" Visibility="Collapsed">
                    <Border BorderBrush="{StaticResource NeonBrush}" 
                        BorderThickness="1" 
                        Background="#0A0E14" 
                        Width="900" 
                        Height="600" 
                        CornerRadius="5">
                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="ПОДГОТОВКА К СРАЖЕНИЮ" 
                                   Foreground="{StaticResource NeonBrush}" 
                                   FontSize="36" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,30"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ИГРОК 1 -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="ИГРОК 1" Foreground="White" Opacity="0.5" Margin="0,0,0,10"/>
                                    <TextBox x:Name="Player1NameBox" 
                                         Text="PLAYER_ONE" 
                                         Height="40" 
                                         Background="#151A20" 
                                         Foreground="White" 
                                         BorderBrush="{StaticResource NeonBrush}" 
                                         Padding="10,5" 
                                         FontSize="18" 
                                         Margin="0,0,0,20"/>

                                    <TextBlock Text="ВЫБЕРИТЕ ФРАКЦИЮ" Foreground="White" FontSize="12" Margin="0,0,0,10"/>
                                    <UniformGrid Columns="1">
                                        <RadioButton x:Name="Player1Accretia" 
                                                 Content="ACCRETIA EMPIRE" 
                                                 Tag="#FF3333" 
                                                 Foreground="#FF3333" 
                                                 Style="{StaticResource FactionButtonStyle}" 
                                                 IsChecked="True" 
                                                 Height="51" 
                                                 Width="251" 
                                                 FontSize="20"/>
                                        <RadioButton x:Name="Player1Bellato" 
                                                 Content="BELLATO UNION" 
                                                 Tag="#3399FF" 
                                                 Foreground="#3399FF" 
                                                 Style="{StaticResource FactionButtonStyle}" 
                                                 Height="50" 
                                                 Width="251" 
                                                 FontSize="20"/>
                                        <RadioButton x:Name="Player1Cora" 
                                                 Content="CORA ALLIANCE" 
                                                 Tag="#CC33FF" 
                                                 Foreground="#CC33FF" 
                                                 Style="{StaticResource FactionButtonStyle}" 
                                                 Height="50" 
                                                 Width="251" 
                                                 FontSize="20"/>
                                    </UniformGrid>
                                </StackPanel>

                                <TextBlock Grid.Column="1" 
                                       Text="VS" 
                                       Foreground="White" 
                                       FontSize="48" 
                                       FontWeight="Black" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center" 
                                       Opacity="0.2"/>

                                <!-- ИГРОК 2 -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="ИГРОК 2" Foreground="White" Opacity="0.5" Margin="0,0,0,10"/>
                                    <TextBox x:Name="Player2NameBox" 
                                         Text="PLAYER_TWO" 
                                         Height="40" 
                                         Background="#151A20" 
                                         Foreground="White" 
                                         BorderBrush="{StaticResource NeonBrush}" 
                                         Padding="10,5" 
                                         FontSize="18" 
                                         Margin="0,0,0,20"/>

                                    <TextBlock Text="ВЫБЕРИТЕ ФРАКЦИЮ" Foreground="White" FontSize="12" Margin="0,0,0,10"/>
                                    <UniformGrid Columns="1">
                                        <RadioButton x:Name="Player2Accretia" 
                                                 Content="ACCRETIA EMPIRE" 
                                                 Tag="#FF3333" 
                                                 Foreground="#FF3333" 
                                                 Style="{StaticResource FactionButtonStyle}" 
                                                 Height="53" 
                                                 Width="267" 
                                                 FontSize="18"/>
                                        <RadioButton x:Name="Player2Bellato" 
                                                 Content="BELLATO UNION" 
                                                 Tag="#3399FF" 
                                                 Foreground="#3399FF" 
                                                 Style="{StaticResource FactionButtonStyle}" 
                                                 IsChecked="True" 
                                                 Height="54" 
                                                 Width="267" 
                                                 FontSize="18"/>
                                        <RadioButton x:Name="Player2Cora" 
                                                 Content="CORA ALLIANCE" 
                                                 Tag="#CC33FF" 
                                                 Foreground="#CC33FF" 
                                                 Style="{StaticResource FactionButtonStyle}" 
                                                 Height="53" 
                                                 Width="267" 
                                                 FontSize="18"/>
                                    </UniformGrid>
                                </StackPanel>
                            </Grid>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                                <Button x:Name="BtnNewGameCancel" 
                                    Content="ОТМЕНА" 
                                    Style="{StaticResource RFGameButton}" 
                                    Width="200" 
                                    Height="50" 
                                    Margin="10,0" 
                                    Click="BtnNewGameCancel_Click"/>
                                <Button x:Name="BtnStartBoardGame" 
                                    Content="В БОЙ" 
                                    Style="{StaticResource RFGameButton}" 
                                    Width="250" 
                                    Height="60" 
                                    FontWeight="Black" 
                                    Click="BtnStartBoardGame_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- ЭКРАН ЗАГРУЗКИ ИГРЫ -->
                <Grid x:Name="LoadGameScreen" Background="#CC050505" Visibility="Collapsed">
                    <Border BorderBrush="{StaticResource NeonBrush}" 
                        BorderThickness="1" 
                        Background="#0A0E14" 
                        Width="700" 
                        Height="600" 
                        CornerRadius="5">
                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="ВОССТАНОВЛЕНИЕ ДАННЫХ" 
                                   Foreground="{StaticResource NeonBrush}" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,20"/>

                            <ListBox x:Name="SaveGamesList" 
                                 Grid.Row="1" 
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 SelectionChanged="SaveGame_SelectionChanged">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="Bord" 
                                                        BorderBrush="#1A222D" 
                                                        BorderThickness="0,0,0,1" 
                                                        Background="#0D1218" 
                                                        Padding="15" 
                                                        Margin="0,2">
                                                        <Grid>
                                                            <StackPanel>
                                                                <TextBlock Text="{Binding SaveName}" 
                                                                       Foreground="White" 
                                                                       FontSize="18" 
                                                                       FontWeight="Bold"/>
                                                                <TextBlock Text="{Binding Date}" 
                                                                       Foreground="{StaticResource NeonBrush}" 
                                                                       FontSize="12" 
                                                                       Opacity="0.6"/>
                                                            </StackPanel>
                                                            <TextBlock Text="{Binding Factions}" 
                                                                   Foreground="Gray" 
                                                                   HorizontalAlignment="Right" 
                                                                   VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Bord" Property="Background" Value="#1A222D"/>
                                                            <Setter TargetName="Bord" Property="BorderBrush" Value="{StaticResource NeonBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Bord" Property="Background" Value="#00F2FF"/>
                                                            <Setter Property="Foreground" Value="Black"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                                <Button x:Name="BtnLoadGameCancel" 
                                    Content="НАЗАД" 
                                    Style="{StaticResource RFGameButton}" 
                                    Width="200" 
                                    Height="50" 
                                    Margin="10,0" 
                                    Click="BtnLoadGameCancel_Click"/>
                                <Button x:Name="BtnLoadGameStart" 
                                    Content="ЗАГРУЗИТЬ" 
                                    Style="{StaticResource RFGameButton}" 
                                    Width="200" 
                                    Height="50" 
                                    Click="BtnLoadGameStart_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Viewbox>
</Window>