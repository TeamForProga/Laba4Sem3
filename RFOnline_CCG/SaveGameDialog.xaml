<Window x:Class="RFOnline_CCG.SaveGameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сохранить игру" 
        Height="349" 
        Width="442"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#0A0E14" WindowStyle="None">

    <Window.Resources>
        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="Background" Value="#10151B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="#00F2FF" 
                                BorderThickness="2" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A2A3A"/>
                                <Setter Property="Foreground" Value="#00F2FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#00F2FF" BorderThickness="1" Margin="20">
        <StackPanel Margin="20">
            <TextBlock Text="СОХРАНИТЬ ИГРУ" 
                       Foreground="#00F2FF" 
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <TextBlock Text="Имя сохранения:" 
                       Foreground="White" 
                       FontSize="14"
                       Margin="0,0,0,5"/>

            <TextBox x:Name="SaveNameTextBox"
                     Background="#151A20"
                     Foreground="White"
                     BorderBrush="#00F2FF"
                     FontSize="14"
                     Padding="10,5"
                     Text="Игра_01"
                     MaxLength="50"/>

            <TextBlock Text="Доступные сохранения:" 
                       Foreground="#AAA" 
                       FontSize="12"
                       Margin="0,15,0,5"/>

            <ListBox x:Name="ExistingSavesList"
                     Height="60"
                     Background="#151A20"
                     BorderBrush="#444"
                     BorderThickness="1"
                     Margin="0,0,0,15"
                     SelectionChanged="ExistingSavesList_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Foreground="#CCC" FontSize="11"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button Content="ОТМЕНА" 
                        Style="{StaticResource DialogButton}"
                        Click="Cancel_Click"/>

                <Button Content="СОХРАНИТЬ" 
                        Style="{StaticResource DialogButton}"
                        Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>