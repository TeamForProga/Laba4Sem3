<Application x:Class="RFOnline_CCG.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RFOnline_CCG"
             xmlns:converters="clr-namespace:RFOnline_CCG.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Конвертеры -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:BoolToHiddenVisibilityConverter x:Key="BoolToHiddenVisibilityConverter"/>
            <converters:EqualsToVisibilityConverter x:Key="EqualsToVisibilityConverter"/>

            <converters:HealthToColorConverter x:Key="HealthToColorConverter"/>
            <converters:FactionToColorConverter x:Key="FactionToColorConverter"/>
            <converters:CreatureStateToColorConverter x:Key="CreatureStateToColorConverter"/>
            <converters:EnergyToColorConverter x:Key="EnergyToColorConverter"/>

            <converters:HealthToTextConverter x:Key="HealthToTextConverter"/>
            <converters:AttackHealthConverter x:Key="AttackHealthConverter"/>
            <converters:EnergyTextConverter x:Key="EnergyTextConverter"/>
            <converters:CardCostConverter x:Key="CardCostConverter"/>

            <converters:FactionToBoolConverter x:Key="FactionToBoolConverter"/>
            <converters:EqualsToBoolConverter x:Key="EqualsToBoolConverter"/>
            <converters:GreaterThanConverter x:Key="GreaterThanConverter"/>
            <converters:LessThanConverter x:Key="LessThanConverter"/>

            <converters:CardTypeToTextConverter x:Key="CardTypeToTextConverter"/>
            <converters:SpellSubtypeToTextConverter x:Key="SpellSubtypeToTextConverter"/>
            <converters:IsCreatureConverter x:Key="IsCreatureConverter"/>
            <converters:IsSpellConverter x:Key="IsSpellConverter"/>

            <converters:PercentageConverter x:Key="PercentageConverter"/>
            <converters:ValueFromPercentageConverter x:Key="ValueFromPercentageConverter"/>
            <converters:AddConverter x:Key="AddConverter"/>

            <converters:TextTruncateConverter x:Key="TextTruncateConverter"/>
            <converters:DateTimeConverter x:Key="DateTimeConverter"/>

            <!-- Цвета темы -->
            <Color x:Key="NeonColor">#00F2FF</Color>
            <SolidColorBrush x:Key="NeonBrush" Color="{StaticResource NeonColor}"/>
            <SolidColorBrush x:Key="NeonCyan" Color="#00F2FF"/>
            <SolidColorBrush x:Key="EnergyOrange" Color="#FF8C00"/>
            <SolidColorBrush x:Key="AccretiaRed" Color="#FF3333"/>
            <SolidColorBrush x:Key="BellatoBlue" Color="#3399FF"/>
            <SolidColorBrush x:Key="CoraPurple" Color="#CC33FF"/>
            <SolidColorBrush x:Key="NeutralGray" Color="#888888"/>

            <!-- Шрифты -->
            <FontFamily x:Key="GameFont">Segoe UI</FontFamily>

            <!-- Основные стили -->
            <Style x:Key="BaseTextStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource GameFont}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>
            <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#00a8ff"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="CaretBrush" Value="#00a8ff"/>
        </Style>

        <Style TargetType="ScrollViewer">
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>